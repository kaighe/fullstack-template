{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,

        "baseUrl": ".",
        "paths": {
            "@my-app/shared/*": ["../../shared/*"]
        },

        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "include": [
        "src"
    ]
}
